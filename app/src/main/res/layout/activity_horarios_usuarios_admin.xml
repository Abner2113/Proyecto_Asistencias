<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vistas.horarios_usuarios_admin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="10px">

                <ImageView
                    android:id="@+id/Imagen_logo"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo_uni"/>

                <ImageView
                    android:id="@+id/imagen_nombre_uni"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/nombre_uni"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingRight="50dp"
                android:background="#7C6596EB">
                <Button
                    android:id="@+id/regresar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Regresar"
                    android:textColor="@color/black"
                    android:background="@android:color/transparent"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Horario del Trabajador"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/tvIdTrabajador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="001"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#2F56C0"/>
            </LinearLayout>
            <!-- ScrollView para contenido -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                app:layout_constraintTop_toBottomOf="@id/layoutTitulo"
                app:layout_constraintBottom_toTopOf="@id/footer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Card de configuración -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="#F5F5F5"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp"
                            android:background="@drawable/sombras">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Configurar horario"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:layout_marginBottom="16dp"/>

                            <!-- Día -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Día:"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"/>

                            <Spinner
                                android:id="@+id/spinnerDia"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="16dp"
                                android:padding="12dp"/>

                            <!-- Periodo -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Periodo:"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"/>

                            <Spinner
                                android:id="@+id/spinnerPeriodo"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="16dp"
                                android:padding="12dp"/>

                            <!-- Hora de entrada -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hora de entrada:"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"/>

                            <EditText
                                android:id="@+id/etHoraEntrada"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="16dp"
                                android:hint="00:00"
                                android:inputType="time"
                                android:gravity="center"
                                android:padding="12dp"
                                android:focusable="false"
                                android:clickable="true"/>

                            <!-- Hora de salida -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hora de salida:"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"/>

                            <EditText
                                android:id="@+id/etHoraSalida"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="20dp"
                                android:hint="00:00"
                                android:inputType="time"
                                android:gravity="center"
                                android:padding="12dp"
                                android:focusable="false"
                                android:clickable="true"/>

                            <!-- Botón Guardar -->
                            <Button
                                android:id="@+id/btnBuscar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Guardar"
                                android:textStyle="bold"
                                android:textColor="#2f56c0"
                                android:backgroundTint="#FFFFFF"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_marginBottom="10dp" />
                            <!-- TABLA DE USUARIOS - VERSIÓN SIMPLE -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Horario:"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:textColor="#000000"
                                android:layout_marginBottom="10dp"/>

                            <!-- ListView simple para mostrar los datos -->
                            <ListView
                                android:id="@+id/listaEmpleadosHorarioAdmin"
                                android:layout_width="match_parent"
                                android:layout_height="300dp"
                                android:background="#FFFFFF"
                                android:divider="#CCCCCC"
                                android:dividerHeight="1dp"
                                android:padding="5dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </ScrollView>
            <TextView
                android:id="@+id/footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="© 2025 Empresa kreaCode - Todos los derechos reservados"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center"
                android:padding="10dp"
                android:background="#7C6596EB"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>